<div class="container">
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Wind Direction</th>
                        <th>Wind Speed</th>
                        <th>Tempreture</th>
                        <th>Clouds</th>
                        <th>Visibility</th>
                        {{!-- <th>Sunset</th> --}}
                    </tr>
                </thead>

                <tbody>
                    {{#each hourly}}
                    <tr>
                        <td>{{unixConvert this.dt}}</td>
                        <td>{{this.wind_deg}}</td>
                        <td>{{this.wind_speed}}</td>
                        <td>{{this.temp}}</td>
                        <td>{{this.clouds}}</td>
                        <td>{{this.visibility}}</td>
                        {{!-- <td>{{this.weather}}</td> --}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>